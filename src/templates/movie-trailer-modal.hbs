<div class="trailer-modal">
  <div class='trailer-modal__wrapper'>
    <button class='movie-modal__btn-close js-trailer-modal-close' aria-label='close'></button>
    <div class="movie-modal__trailer-wrapper">
      <iframe
         class="movie-modal__trailer"
         {{!-- width="560"
         height="315" --}}
         src="https://www.youtube.com/embed/{{key}}"
         title="YouTube video player"
         frameborder="0"
         allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
         allowfullscreen
      ></iframe>
    </div>
  </div>
</div>